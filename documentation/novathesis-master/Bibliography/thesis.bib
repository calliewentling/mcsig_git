   issue = {1},
   journal = {Diversity},
   keywords = {Cropped areas,Fruit and seed sets,Remnant forests,Terrestrial ecosystems},
   pages = {158-175},
   title = {Aspects of landscape and pollinators-what is important to bee conservation?},
   volume = {6},
   year = {2014},
}
