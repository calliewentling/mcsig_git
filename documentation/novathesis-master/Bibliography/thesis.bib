   journal = {Computers, Environment and Urban Systems},
   keywords = {Geographic information retrieval,Text and web mining},
   pages = {378-399},
   title = {Adding geographic scopes to web resources},
   volume = {30},
   year = {2006},
}
@article{Snyder2019,
   abstract = {Real-time tweets can provide useful information on evolving events and situations. Geotagged tweets are especially useful, as they indicate the location of origin and provide geographic context. However, only a small portion of tweets are geotagged, limiting their use for situational awareness. In this paper, we adapt, improve, and evaluate a state-of-the-art deep learning model for city-level geolocation prediction, and integrate it with a visual analytics system tailored for real-time situational awareness. We provide computational evaluations to demonstrate the superiority and utility of our geolocation prediction model within an interactive system.},
   author = {Luke S. Snyder and Morteza Karimzadeh and Ray Chen and David S. Ebert},
   isbn = {9781450369572},
   journal = {arXiv},
   keywords = {Deep learning,Geolocation prediction,Twitter},
   pages = {0-3},
   title = {City-level Geolocation of Tweets for Real-time Visual Analytics},
   year = {2019},
}
@article{Lee2019,
   abstract = {Improving geolocation accuracy in text data has long been a goal of automated text processing. We depart from the conventional method and introduce a two-stage supervised machine-learning algorithm that evaluates each location mention to be either correct or incorrect. We extract contextual information from texts, i.e., N-gram patterns for location words, mention frequency, and the context of sentences containing location words. We then estimate model parameters using a training data set and use this model to predict whether a location word in the test data set accurately represents the location of an event. We demonstrate these steps by constructing customized geolocation event data at the subnational level using news articles collected from around the world. The results show that the proposed algorithm outperforms existing geocoders even in a case added post hoc to test the generality of the developed algorithm.},
   author = {Sophie J. Lee and Howard Liu and Michael D. Ward},
   doi = {10.1017/psrm.2018.23},
   issn = {20498489},
   issue = {4},
   journal = {Political Science Research and Methods},
   keywords = {chine learning,event data,geolocation,i nformation extraction,natural language processing,supervised ma-,text analysis},
